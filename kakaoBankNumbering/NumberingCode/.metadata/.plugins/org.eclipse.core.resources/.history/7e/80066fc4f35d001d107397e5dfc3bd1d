package common;

/**
 * CommonCache.properties를 통해 사용자가 시스템 속성 넣는다.
 * 엔진이 돌아가면서 특정 기능을 설정할 수 있도록 한다.
 * 
 * @version 1.00
 * @since 2022/11/13
 * @author Changhee Kim
 */

import java.io.FileInputStream;
import java.io.IOException;
import java.util.Properties;

import common.logging.Logger;

public class Property {
	public static Properties prop = new Properties();
	
	public static final String PROPERTIES_PATH = "${TOMCAT_HOME}/CommonCache.properties";
	
	public static final String KEY__LOG4j_LOG_LEVEL = "key_log4j.level";

	public static final String KEY__LOG4j_LOG_PATH = "key_log4j.log_path";

	public static final String KEY__LOG4j_LOG_FILENAME = "key_log4j.log_file_name";


	static {
		try {
			prop.load(new FileInputStream(PROPERTIES_PATH));
		} catch (IOException e) {
			Logger.error("\"classes/CommonCache.properties\" file not found");
		}
	}

	public static String getKEY__LOG4j_LOG_LEVEL() {
		return prop.getProperty(KEY__LOG4j_LOG_LEVEL, "DEBUG");
	}
	
	public static String getKEY__LOG4j_LOG_PATH() {
		return prop.getProperty(KEY__LOG4j_LOG_PATH, "../");
	}
	
	public static String getKEY__LOG4j_LOG_FILENAME() {
		return prop.getProperty(KEY__LOG4j_LOG_FILENAME, Logger.DEFAULT_LOGGER_NAME);
	}
}
